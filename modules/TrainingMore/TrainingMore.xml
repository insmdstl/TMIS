<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="TrainingMore">
  <metadata>
    <displayName>iHRIS Training More</displayName>
    <category>HRH2030 Customization</category>
    <description>Adding Training Area to Training</description>
    <creator>HRH2030 Timor-Leste</creator>
    <version>4.3.0</version>
    <requirement name='Training'>
       <atLeast version='4.0'/>
    </requirement>
    <path name="templates">
      <value>./templates</value>
    </path>
    <priority>370</priority>
  </metadata>           
  <configurationGroup name="TrainingMore"  path="/">
        <configurationGroup name="forms" path="/modules/forms/formClasses">
            <configurationGroup name="iHRIS_Training">
          <version>4.2.0.2</version>
          <displayName>Configuration for the class 'iHRIS_Training'</displayName>
          <configuration name="extends">
            <displayName>The class this form extends</displayName>
            <value>I2CE_SimpleList</value>
          </configuration>
		  
          <configurationGroup name="fields">
            <displayName>The fields defined for this form</displayName>
            <version>4.1.1.3</version>
			
            <configurationGroup name="training_area">
                <displayName>The field 'training_area'</displayName>
                <version>3.2.5</version>
                <configuration name="formfield">
                    <displayName>The form field type</displayName>
                        <value>MAP</value>
                    </configuration>
                    <configuration name="headers" type="delimited" locale="en_US">
                        <displayName>The headers for this field.</displayName>
                        <version>3.2.1</version>
                        <value>default:Training Area</value>
                    </configuration>                                
            </configurationGroup>  
            <!-- training area -->

          </configurationGroup>
          <!-- fields -->
        </configurationGroup>
        <!-- iHRIS_Training -->
      </configurationGroup>
    <!-- end of  forms-->
    </configurationGroup>
</I2CEConfiguration>
