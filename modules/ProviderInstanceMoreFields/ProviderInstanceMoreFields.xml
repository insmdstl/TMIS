<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="ProviderInstanceMoreFields">
  <metadata>
    <displayName>iHRIS Provider Instance More Fields</displayName>
    <className>iHRIS_Module_ProviderInstance</className>
    <category>HRH2030 Customization</category>
    <description>Adding Training Type and Classification Fields to the Training Provider's Instance</description>
    <creator>HRH2030 Timor-Leste</creator>
    <version>4.3.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <path name="classes">
      <value>./lib</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <priority>150</priority>
  </metadata>
  <configurationGroup name="ProviderInstanceMoreFields" path="/I2CE">     
	
 
    <configurationGroup name="forms" path="/modules/forms/formClasses">
	  
        <configurationGroup name="iHRIS_ProviderInstance">
          <displayName>Configuration for the class 'iHRIS_ProviderInstance'</displayName>
          <configuration name="extends">
            <displayName>The class this form extends</displayName>
            <value>I2CE_Form</value>
          </configuration>
		  
          
          <configurationGroup name="fields">
            <displayName>The fields defined for this form</displayName>
            <version>4.1.3.13</version>		
            
            <configurationGroup name="training_classification">
              <displayName>The field 'training_classification'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Training Classification</value>
              </configuration>
            </configurationGroup>                                                       
			
			<configurationGroup name="training_type">
              <displayName>The field 'training_type'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Training Type</value>
              </configuration>
            </configurationGroup> 			
			
          </configurationGroup>
		  
        </configurationGroup>
		<!-- end iHRIS_ProviderInstance-->    

    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>