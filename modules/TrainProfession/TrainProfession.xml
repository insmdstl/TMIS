<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="TrainProfession">
  <metadata>
    <displayName>iHRIS Train Profession</displayName>
    <className>iHRIS_Module_TrainProfession</className>
    <classification>Application Component</classification>
	<category>HRH2030 Customization</category>
    <description>A Profession Form</description>
    <creator>HRH2030 Timor-Leste</creator>
    <version>4.3.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <path name="classes">
      <value>./lib</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <requirement name="forms-storage">
      <atLeast version="4.1.8.0" />
    </requirement>
    <priority>150</priority>
  </metadata>
  <configurationGroup name="TrainProfession" path="/I2CE">
    
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <configuration name="can_edit_database_list_train_profession" locale="en_US">
        <version>4.1.0.1</version>
        <value>Edit the Profession list</value>
      </configuration>
      <configuration name="can_view_database_list_train_profession" locale="en_US">
        <version>4.1.0.1</version>
        <value>View the Profession list</value>
      </configuration>
    </configurationGroup>	
	
    <configurationGroup name="tasks_trickle_down" path="/I2CE/tasks/task_trickle_down/">
      <version>4.1.6.0</version>
      <configuration name="can_edit_database_list_train_profession" values="many">
        <value>can_edit_database_lists</value>
        <value>can_view_database_list_train_profession</value>
      </configuration>
      <configuration name="can_view_database_list_train_profession" values="many">
        <value>can_view_database_lists</value>
      </configuration>
      <configuration name="can_edit_all_database_lists" values="many">
        <value>can_edit_database_list_train_profession</value>
      </configuration>
      <configuration name="can_view_all_database_lists" values="many">
        <value>can_view_database_list_train_profession</value>
      </configuration>
    </configurationGroup>
		
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <version>4.1.0.1</version>
        <configurationGroup name="train_profession">
          <displayName>Profession Information</displayName>
          <description>The ProfessionInformation Form</description>
          <configuration name="class" values="single">
            <displayName>Class Name</displayName>
            <description>The name of the class providing the form</description>
            <value>I2CE_SimpleList</value>
          </configuration>
          <configuration name="display" values="single" locale="en_US">
            <displayName>Display name</displayName>
            <description>The display name for this form</description>
            <value>Profession</value>
          </configuration>
          <configuration name="storage" values="single">
            <displayName>Form Storage</displayName>
            <description>The form storage to use for this form</description>
            <version>4.1.8.0</version>
            <value>magicdata</value>
          </configuration>
        </configurationGroup>
        <!-- Profession -->
      </configurationGroup>
      <!-- end of  forms-->
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>